<odoo>

    <record model="ir.ui.view" id="fastapi_endpoint_model_jwt_form_view">
        <field name="name">fastapi.endpoint.model.jwt.form</field>
        <field name="model">fastapi.endpoint</field>
        <field name="inherit_id" ref="fastapi.fastapi_endpoint_form_view" />
        <field name="arch" type="xml">
                <span name="configuration" position="after">
                    <group
                    name="jwt_model_app_configuration"
                    title="Configuration"
                    invisible="app != 'fastapi_auth_jwt_model'"
                >
                        <field
                        name="auth_jwt_validator_id"
                        required="app == 'fastapi_auth_jwt_model'"
                    />
                    </group>
                </span>
        </field>
    </record>

</odoo>
